{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noUnusedParameters": false,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "es5",
    "module": "esnext",
    "lib": ["es5", "es6", "ES2017", "dom"],
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules/*"]
}
